<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z_bg">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/a_title"
            android:text="主题：   吃饭很纠结    "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="发表用户：13700000000        发表时间：2019-04-01"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/a_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="true"
                android:textColorHighlight="@color/colorBg"
                android:text="内容"/>
          </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/like"
                android:text="赞  "
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:textColor="#8B008B"
                android:drawablePadding="5dp"
                android:id="@+id/tv_favor"/>
            <TextView
                android:id="@+id/show_a_change"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/edit"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPurple"
                android:textStyle="bold"
                android:text="修改"/>
            <TextView
                android:id="@+id/show_a_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/delete"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:layout_gravity="bottom"
                android:textColor="#bb0000"
                android:textStyle="bold"
                android:text="删除"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="说点什么"
                android:textColorHint="#a2a2a2"
                android:textSize="13sp"
                android:background="@color/colorBg"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/tv_comment"
                android:text="评论"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPurple"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="3dp" android:background="@color/colorList"/>
           </LinearLayout>
    <ListView
        android:id="@+id/lv_comment_list"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </ListView>
</LinearLayout>